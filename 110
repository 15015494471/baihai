<body>
    <div class="wechat-container">
        <!-- 页面内容 -->
        <div class="content-container">
            <div class="success-icon">
                <i class="fas fa-check"></i>
            </div>
            
            <div class="verification-text">页面微信官方认证安全页面</div>
            <div class="domain-text">Wep.vipyshy.com</div>
            
            <button class="enter-button" id="enterBtn">立即进入</button>
            
            <div class="loading-indicator" id="loadingIndicator">
                <i class="fas fa-spinner"></i> 正在跳转中，请稍后...
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const enterBtn = document.getElementById('enterBtn');
            const loadingIndicator = document.getElementById('loadingIndicator');
            
            // 真实的跳转目标
            const targetUrl = 'http://www.baihai.pics/';
            
            // 使用腾讯短网址API获取短链
            async function getShortUrl(longUrl) {
                try {
                    // 这里使用腾讯官方短网址API
                    const apiUrl = `http://lnurl.cn/url-api.json?url=${encodeURIComponent(longUrl)}`;
                    const response = await fetch(apiUrl);
                    
                    if (!response.ok) {
                        throw new Error(`API响应错误: ${response.status}`);
                    }
                    
                    return await response.text();
                } catch (error) {
                    console.error('短网址生成失败:', error);
                    // 失败时返回原始链接作为后备
                    return longUrl;
                }
            }
            
            // 跳转到目标页面
            async function navigateToTarget() {
                enterBtn.style.display = 'none';
                loadingIndicator.style.display = 'block';
                
                try {
                    // 获取目标地址的短网址
                    const shortUrl = await getShortUrl(targetUrl);
                    
                    // 3秒后跳转（模拟短网址处理时间）
                    setTimeout(() => {
                        // 直接跳转到目标页面（短网址指向目标）
                        window.location.href = shortUrl;
                    }, 1800);
                } catch (error) {
                    console.error('跳转失败:', error);
                    // 作为后备，直接跳转
                    window.location.href = targetUrl;
                }
            }
            
            // 初始化
            enterBtn.addEventListener('click', navigateToTarget);
        });
    </script>
</body>
